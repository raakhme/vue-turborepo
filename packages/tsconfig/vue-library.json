{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "~": ["."],
      "~/*": ["./*"],
      "@": ["."],
      "@/*": ["./*"]
    }
  },
  "include": ["./nuxt.d.ts", "."]
}
